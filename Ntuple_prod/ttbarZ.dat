import sm

# multiparticle definition
define p = g u c d s b u~ c~ d~ s~ b~
define j = g u c d s b u~ c~ d~ s~ b~
define lightj = g u u~ d d~ c c~
define q = u u~ d d~ c c~ s s~ b b~
define v = w+ w- z

# ttbar + Zboson
generate p p > t t~ z, (t > w+ b, w+ > e+ ve), (t~ > w- b~, w- > q q), (z > e- e+)
add process p p > t t~ z, (t > w+ b, w+ > q q), (t~ > w- b~, w- > e- ve~), (z > e- e+)
output /data/mghasemi/samples/background/ttbarZ

# 1st launch
launch /data/mghasemi/samples/background/ttbarZ

shower=Pythia8
detector=Delphes
analysis=OFF
madspin=OFF
reweight=OFF

set nevents = 1000000  # may increase in future

# 2nd launch
launch /data/mghasemi/samples/background/ttbarZ

shower=Pythia8
detector=Delphes
analysis=OFF
madspin=OFF
reweight=OFF

set nevents = 1000000  # may increase in future

